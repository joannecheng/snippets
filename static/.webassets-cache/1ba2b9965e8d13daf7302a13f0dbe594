var DragDrop,
  __bind = function(fn, me){ return function(){ return fn.apply(me, arguments); }; };

DragDrop = (function() {

  function DragDrop() {
    this.dragleave = __bind(this.dragleave, this);
    this.dragoverListener = __bind(this.dragoverListener, this);
    this.dropHandlers = __bind(this.dropHandlers, this);    this.dropHandlers();
    this.dropArea = $('#drop_area');
  }

  DragDrop.prototype.dropHandlers = function() {
    var _this = this;
    $(document).bind('drop dragover', function(e) {
      return e.preventDefault();
    });
    $dropArea.on('dragover', this.dragoverListener);
    $dropArea.on('dragleave', this.dragleaveListener);
    return $('#fileupload').fileupload({
      dataType: 'png',
      drop: function(e, data) {
        var file, _i, _len, _results;
        _results = [];
        for (_i = 0, _len = data.length; _i < _len; _i++) {
          file = data[_i];
          _results.push($('body').append($('<p/>').text(file.name)));
        }
        return _results;
      }
    });
  };

  DragDrop.prototype.dragoverListener = function(e) {
    return dropArea.css('opacity', '0.8');
  };

  DragDrop.prototype.dragleave = function(e) {
    return dropArea.css('opacity', '1');
  };

  return DragDrop;

})();

window.DragDrop = new DragDrop;
